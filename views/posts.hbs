<div class="col-md-12">
  <h2>Posts</h2>
  <hr />
  {{#unless posts}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Post ID</th>
          <th>Title</th>
          <th>Post Date</th>
          <th>Category</th>
          <th>Published</th>
          <th></th> <!-- New column for the "remove" link -->
        </tr>
      </thead>
      <tbody>
        {{#each posts}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.date}}</td>
            <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
            <td>{{this.published}}</td>
            <td>
              <a href="/posts/delete/{{this.id}}" class="btn btn-danger">Remove</a>
            </td> <!-- "Remove" link in a new column -->
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
