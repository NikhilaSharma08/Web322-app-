{{#if data.post}}
  <article>
    <h2>{{post.title}}</h2>
    <img src="https://www.google.com/imgres?imgurl=https%3A%2F%2Fimages.unsplash.com%2Fphoto-1461749280684-dccba630e2f6%3Fixlib%3Drb-4.0.3%26ixid%3DM3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y29kaW5nfGVufDB8fDB8fHww%26w%3D1000%26q%3D80&tbnid=FmphWmR7s96hlM&vet=12ahUKEwji0aCO8fz_AhVKFmIAHVwtBwgQMygAegUIARDjAQ..i&imgrefurl=https%3A%2F%2Funsplash.com%2Fs%2Fphotos%2Fcoding&docid=kCWKwglLTq1cAM&w=1000&h=668&q=coding%20pics&ved=2ahUKEwji0aCO8fz_AhVKFmIAHVwtBwgQMygAegUIARDjAQ" alt="Feature Image">
    {{#safeHTML post.body}}
    {{/safeHTML}}
    <strong>Category:</strong> {{post.category}}
    <strong>Last Updated:</strong> {{post.postdate}}
  </article>
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
  </div>
{{/if}}

{{#if data.posts}}
  <h4>Posts</h4>
  <ul>
    {{#each data.posts}}
      <li><a href="/blog/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a></li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.categories}}
  <h4>Categories</h4>
  <ul>
    {{#each data.categories}}
      <li><a href="/blog?category={{this.id}}">{{this.name}}</a></li>
    {{/each}}
  </ul>
{{/if}}
