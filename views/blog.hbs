{{#if data.post}}
  <article>
    <h2>{{post.title}}</h2>
    <img src="{{post.featureImage}}" alt="Feature Image">
    {{#safeHTML post.body}}
    {{/safeHTML}}
    <strong>Category:</strong> {{post.category}}
    <strong>Last Updated:</strong> {{post.postdate}}
  </article>
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
  </div>
{{/if}}

{{#if data.posts}}
  <h4>Posts</h4>
  <ul>
    {{#each data.posts}}
      <li><a href="/blog/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a></li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.categories}}
  <h4>Categories</h4>
  <ul>
    {{#each data.categories}}
      <li><a href="/blog?category={{this.id}}">{{this.name}}</a></li>
    {{/each}}
  </ul>
{{/if}}
